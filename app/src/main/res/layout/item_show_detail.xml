<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">


<RelativeLayout
    android:layout_width="265dp"
    android:layout_height="270dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/shape_bg_grade">
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_gray"
        android:textSize="16sp"
        android:text="李晓明"/>
    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:text="评分"
        android:layout_marginLeft="14dp"/>
    <net.youlvke.yanyuke.view.RatingBar
        android:id="@+id/rb_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        app:starImageSize="18dp"
        app:starPadding="10dp"
        app:starEmpty="@mipmap/rating_bar_normal"
        app:starFill="@mipmap/rating_bar_selected"
        app:clickable="false"
        app:starCount="5"
        app:starStep="0"
        android:layout_marginLeft="64dp"/>
    <TextView
        android:id="@+id/tv_grade_detail"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_grade"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="14dp"
        android:lineSpacingExtra="10dp"
        android:textSize="14sp"
        android:maxLength="100"
        android:textColor="@color/text_color_gray"
        android:text="@string/grade_detail"
        android:layout_height="145dp" />
    <TextView
        android:id="@+id/tv_evaluate_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="15dp"
        android:text="期号  00000020"/>


</RelativeLayout>
