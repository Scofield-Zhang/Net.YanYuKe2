<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"

        android:divider="@drawable/shape_line_f0"
        android:orientation="vertical"
        android:showDividers="middle|beginning">

        <TextView
            android:id="@+id/tv_announce_detail"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:textColor="@color/home_text_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp">


            <net.youlvke.yanyuke.view.CircleImageView
                android:id="@+id/civ_annouce"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_award_detail"
                app:border_color="@color/indictor_gray"
                app:border_width="1.5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@id/civ_annouce"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获奖者：138****7894"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_sequence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="商品期数：1000023"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_particpate_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="本次参与：10人次"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrows_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
