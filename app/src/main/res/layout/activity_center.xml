<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161d31"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_tab" />

    <net.youlvke.yanyuke.view.PullToRefreshView
        android:id="@+id/pull_to_Refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:id="@+id/rl_aa"
                        android:layout_width="175dp"
                        android:layout_height="340dp"
                        android:background="#fff">

                        <RelativeLayout
                            android:id="@+id/rl_a1"
                            android:layout_width="match_parent"
                            android:layout_height="251.5dp">

                            <ImageView
                                android:id="@+id/iv_hot1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_alignParentBottom="true"
                                android:background="#7F000000">

                                <TextView
                                    android:id="@+id/tv_hot1_progress_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"
                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_hot1_residue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                            </RelativeLayout>


                        </RelativeLayout>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_below="@id/rl_a1"
                            android:progressDrawable="@drawable/global_progressbar_color" />

                        <TextView
                            android:id="@+id/tv_hot1_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/progressBar"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="10dp"
                            android:lines="3"
                            android:textColor="@color/text_color_gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_bb"
                        android:layout_width="175dp"
                        android:layout_height="154.5dp"
                        android:layout_alignParentRight="true">

                        <RelativeLayout
                            android:id="@+id/rl_b1"
                            android:layout_width="match_parent"
                            android:layout_height="97dp">

                            <ImageView
                                android:id="@+id/iv_hot2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:background="#7F000000">

                                <TextView
                                    android:id="@+id/tv_hot2_progress_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"

                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_hot2_residue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_below="@id/rl_b1"
                            android:progressDrawable="@drawable/global_progressbar_color" />

                        <TextView
                            android:id="@+id/tv_hot2_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5dp"
                            android:lines="2"
                            android:textColor="@color/text_color_gray"
                            android:textSize="12sp"
                            android:layout_below="@+id/progressBar2"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="175dp"
                        android:layout_height="160dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/rl_bb">



                        <RelativeLayout
                            android:id="@+id/rl_cc"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <ImageView
                                android:id="@+id/iv_hot3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_alignParentBottom="true"
                                android:background="#7F000000">

                                <TextView
                                    android:id="@+id/tv_hot3_progress_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"
                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_hot3_residue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="11.5dp"
                                    android:layout_marginRight="10dp"

                                    android:textColor="#fff"
                                    android:textSize="10sp" />

                            </RelativeLayout>

                        </RelativeLayout>
                        <ProgressBar
                            android:id="@+id/progressBar3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_below="@id/rl_cc"
                            android:progressDrawable="@drawable/global_progressbar_color" />

                        <TextView
                            android:id="@+id/tv_hot3_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/progressBar3"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="10dp"
                            android:lines="2"
                            android:textColor="@color/text_color_gray"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner2"
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:layout_marginTop="20dp"
                    app:delay_time="2000"
                    app:image_scale_type="fit_center"
                    app:is_auto_play="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="精致新品，全新体验"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />
                <!-- dsfsdf -->
                <include layout="@layout/include_global" />
                <net.youlvke.yanyuke.view.MyGridView
                    android:id="@+id/gd_shop_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:scrollbars="none"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:numColumns="2"/>
            </LinearLayout>

        </ScrollView>
    </net.youlvke.yanyuke.view.PullToRefreshView>
</LinearLayout>