<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp">
    <net.youlvke.yanyuke.view.CustomImageView
        android:id="@+id/civ_shop_img"
        android:layout_marginLeft="10dp"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:scaleType="center"
        app:cirRadius="5dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_award_detail" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/civ_shop_img">

            <TextView
                android:id="@+id/tv_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:text="桐庐慢生活休闲区\n温泉浴"
                android:lineSpacingExtra="7dp"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_shop_evalute_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/home_text_color"
                android:text="总价值：￥22\n使用时间：2016.11.10  12:12"
                android:lineSpacingExtra="5dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_not_eva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="#c55555"
                android:text="待评价"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>