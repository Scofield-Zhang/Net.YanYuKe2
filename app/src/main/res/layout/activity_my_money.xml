<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

  <include layout="@layout/include_tab" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@mipmap/bg_me_my_money">

        <TextView
            android:id="@+id/tv_money_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="93.60"
            android:textColor="@color/color_value"
            android:textSize="45dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_money_number"
            android:layout_alignBottom="@+id/tv_money_number"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_money_number"
            android:text="元"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money_number"
            android:layout_centerHorizontal="true"
            android:text="可用余额"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_get_money"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:background="@drawable/selector_btn_next"
        android:text="提现"
        android:textColor="@android:color/white" />

</LinearLayout>