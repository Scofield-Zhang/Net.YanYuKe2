        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:divider="@drawable/shape_divider"
        android:showDividers="middle"
        android:orientation="vertical">

    </LinearLayout>

