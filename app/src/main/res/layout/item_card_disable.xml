<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#96A3C3"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <net.youlvke.yanyuke.view.DashedLineView
                android:id="@+id/indicator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                 />

            <TextView
                android:id="@+id/tv_day_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:text="3"
                android:layout_centerVertical="true"
                android:textColor="#f2798f"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text="天后失效"
                android:layout_below="@+id/tv_day_num"
                android:textColor="@color/home_text_color"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_shop_disable_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@id/indicator"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_gray"
                android:text="fdas"/>

            <TextView
                android:id="@+id/tv_shop_disable_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
                android:layout_below="@id/tv_shop_disable_title"
                android:layout_toRightOf="@id/indicator"
                android:text="本券失效后不支持退款，建议您尽快使用"
                android:textColor="@color/home_text_color"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>