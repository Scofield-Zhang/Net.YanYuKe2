<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF"
              android:divider="@drawable/shape_line_f0"
              android:orientation="vertical"
              android:showDividers="middle|end">

    <include layout="@layout/include_tab"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            style="@style/wrap_xy"
            android:text="@string/consingnee"
            android:textColor="@color/home_text_color"/>

        <EditText
            android:id="@+id/et_consinee"
            style="@style/fit_x"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:textColor="@color/text_color_gray"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            style="@style/wrap_xy"
            android:text="@string/contact"
            android:textColor="@color/home_text_color"/>

        <EditText
            android:id="@+id/et_tel_number"
            style="@style/fit_x"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:textColor="@color/text_color_gray"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            style="@style/wrap_xy"
            android:text="@string/area"
            android:textColor="@color/home_text_color"/>

        <TextView
            android:id="@+id/tv_choice"
            style="@style/wrap_xy"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrows_right"
            android:text="@string/choice"
            android:textColor="@color/home_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <EditText
        android:id="@+id/et_detail_address"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="请输入详细地址"
        android:textColor="@color/text_color_gray"
        android:textColorHighlight="@color/home_text_color"
        android:textSize="14sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            style="@style/wrap_xy"
            android:text="设为默认地址"
            android:textColor="@color/home_text_color"/>

        <ImageView
            android:id="@+id/is_defualt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_is_default_address"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@drawable/selector_btn_next"
        android:text="保存"
        android:textColor="@color/text_address"
        android:textSize="15sp"/>
    <View
        android:id="@+id/tv_address_Masker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e0000000"
        android:visibility="gone" />

</LinearLayout>