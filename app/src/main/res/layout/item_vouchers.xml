<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="154dp"
    android:background="@mipmap/vouchers">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:text="8"
            android:textColor="#fff"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tv_vouchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_num"
            android:layout_marginLeft="55dp"
            android:text="抵用券"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vouchers"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="有效期限2016/11/22"
            android:textColor="@color/text_color_gray"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:text="通用抵用券"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text1"
            android:layout_marginTop="21dp"
            android:gravity="right"
            android:lineSpacingExtra="10dp"
            android:text="本优惠券限手机客服端使用\n优惠券暂不支持赠送使用"
            android:textColor="@color/home_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/is_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可使用"
            android:textColor="@color/color_value"
            android:textSize="14sp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</RelativeLayout>