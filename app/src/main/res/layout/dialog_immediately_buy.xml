<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_left_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_gray_white_normal">

            <Button
                android:id="@+id/tv_reduce"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="-"
                android:background="@android:color/transparent"
                android:textColor="@color/home_text_color"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_input_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#D24444"
                android:background="@null"
                android:textCursorDrawable="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tv_add"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="+"
                android:background="@android:color/transparent"
                android:textColor="@color/home_text_color"
                android:textSize="24sp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_5"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_radiobutton_bg"
                android:text="5"
                android:textSize="14sp"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/selector_radiobutton_text" />

            <RadioButton
                android:id="@+id/rb_10"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_radiobutton_bg"
                android:text="10"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/selector_radiobutton_text" />

            <RadioButton
                android:id="@+id/rb_20"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="20"
                android:textSize="14sp"
                android:background="@drawable/selector_radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/selector_radiobutton_text" />

            <RadioButton
                android:id="@+id/rb_bw"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_radiobutton_bg"
                android:layout_marginLeft="10dp"
                android:text="包尾"
                android:button="@null"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@drawable/selector_radiobutton_text" />

            <RadioButton
                android:id="@+id/rb_ms"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="秒杀"
                android:button="@null"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/selector_radiobutton_bg"
                android:textColor="@drawable/selector_radiobutton_text" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dib"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e55555"
        android:text="立即够买"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

</LinearLayout>