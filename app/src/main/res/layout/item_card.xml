<?xml version="1.0" encoding="utf-8"?>
<net.youlvke.yanyuke.view.CouponView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_line"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="199dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_btn_white" />

        <TextView
            android:id="@+id/tv_shopDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_pic"
            android:text="赛贝勒时尚餐厅情侣套餐"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shopDetail"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_pic"
            android:text="桐庐县洋州路203号"
            android:textColor="@color/stroke_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_below="@id/tv_shopDetail"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_detail_address"
            android:src="@mipmap/img_lacation" />

        <LinearLayout
            android:id="@+id/ll_use_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_pic"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ready_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待使用"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_value" />

            <TextView
                android:id="@+id/tv_valid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_address"
                android:layout_marginLeft="29dp"
                android:layout_toRightOf="@id/tv_ready_use"
                android:text="有效期2016/12/12"
                android:textColor="@color/stroke_color"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/stroke_color"
                android:layout_centerVertical="true"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_actual_pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="实付 ￥1.0"
                android:layout_centerInParent="true"
                android:textColor="@color/color_value"
                android:textSize="14sp" />
            <View
                android:id="@+id/vertical_indicator"
                android:layout_width="1.5dp"
                android:layout_height="33dp"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#dcdcdc" />
            <TextView
                android:id="@+id/tv_bond_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_centerVertical="true"
                android:text="券码"
                android:textColor="@color/stroke_color"
                android:layout_alignRight="@id/vertical_indicator"
                android:layout_marginRight="15dp"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/iv_rq_code"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

    </RelativeLayout>
</net.youlvke.yanyuke.view.CouponView>
